@page "/VideoFileViewer"
@using Functionland.FxFiles.Client.Shared.Utils
@inherits AppComponentBase

<div class="video-viewer">
    <div class="video-toolbar">
        <FxButton Padding="0"
                  Class="back-button"
                  OnClick="HandleToolbarBack"
                  BackgroundColor="transparent"
                  ButtonStyle="FxButtonStyle.None" />
        <div class="right-side-toolbar">
            <FxButton Padding="0"
                      Class="pin-button"
                      Margin="0 16px"
                      BackgroundColor="transparent"
                      ButtonStyle="FxButtonStyle.None" />
            <FxButton Padding="0"
                      Class="overflow-button"
                      BackgroundColor="transparent"
                      ButtonStyle="FxButtonStyle.None" />

        </div>
    </div>

    <video id="fxVideoElement">
        <source src="@(Path.InProtocol(PathProtocol.Storage))" type="video/mp4" />
    </video>

    <input id="fxVideoProgressElement" type="range" min="0" value="0" step=".1"/>

    <div id="fxVideoControls">
        <span id="fxVideoCurrentTimeText">00:00</span>

        <button @onclick="OnBackwardClick">Backward</button>
        <button @onclick="OnTogglePlayClick">Play/Pause</button>
        <button @onclick="OnForwardClick" >Forward</button>
        <button @onclick="OnPictureInPictureClick">Picture In Picture</button>

        <span id="fxVideoDurationText">00:00</span>
    </div>
</div>