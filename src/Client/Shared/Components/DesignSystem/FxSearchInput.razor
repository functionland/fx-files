@namespace Functionland.FxFiles.Client.Shared.Components

@inherits AppComponentBase;

@if (IsPartial)
{
    <div class="search-icon"></div>
    <input class="input-box input-partial" type="text"
       placeholder="@Localizer[nameof(AppStrings.InputSearchParial)]"
       value="@_inputText"
       @oninput="HandleInput"
       @onfocus="HandleFocus" />
}
else
{
    <div class="input-full-width">
        <div class="search-icon"></div>
        <input class="input-box" value="@_inputText" @oninput="HandleInput" @onfocus="HandleFocus" type="text" placeholder="@Localizer[nameof(AppStrings.InputSearchFullWidth)]" />
        @if (!string.IsNullOrEmpty(_inputText) || !string.IsNullOrWhiteSpace(_inputText))
        {
            <button class="button-search-input" @onclick="OnDoneClick">@Localizer[nameof(AppStrings.ButtonSearchFullWidth)]</button>
        }
    </div>
}