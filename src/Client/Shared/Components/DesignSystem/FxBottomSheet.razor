<div class="sheet-wrapper @(IsOpen ? "sheet-wrapper-apear" : "")" @onclick="(async () => await Close())">
    <div class="bottom-sheet column items-center justify-end @(!IsOpen ? "" : "show-bottom-sheet")" @onclick:stopPropagation="true" @onclick:preventDefault="true">
        <div class="bottom-sheet-contents column">
            @if (ShowCloseButton)
            {
                <div class="controls">
                    @if (!string.IsNullOrEmpty(Title))
                    {
                        <div class="title-modal">@Title</div>
                    }
                    <button @onclick="(async () => await Close())" class="close-sheet close-button" type="button" title="Close the sheet">
                        <div class="close-button-icon"></div>
                    </button>
                </div>
            }

            @ChildContent
        </div>
    </div>
</div>