@namespace Functionland.FxFiles.Client.Shared.Components.Modal
@inherits AppComponentBase;

<FxBottomSheet 
    ShowCloseButton="true"
    @bind-IsOpen="_isModalOpen"
    OnClose="Close"
    IsFullScreenMode="false">

    <div class="confirmation-modal">

        <div class="confirmation-modal-title">@_title</div>

        <div class="confirmation-modal-description">@_description</div>

        <FxButton Text="@Localizer[nameof(AppStrings.Cancel)]"
                  OnClick="Close"
                  Margin="32px 0 0 0"
                  ButtonSize="FxButtonSize.Stretch"
                  ButtonStyle="FxButtonStyle.Outline" />

        <FxButton Text="@Localizer[nameof(AppStrings.Confirm)]"
                  OnClick="Confirm"
                  Margin="16px 0 21px 0"
                  ButtonSize="FxButtonSize.Stretch"
                  ButtonStyle="FxButtonStyle.Normal" />
    </div>

</FxBottomSheet>
