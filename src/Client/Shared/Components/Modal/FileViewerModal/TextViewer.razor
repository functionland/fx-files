@namespace Functionland.FxFiles.Client.Shared.Components.Modal
@inherits AppComponentBase

<div class="navigation-header">
    <FxBackButton IsEnabled="true" OnClick="OnBack"></FxBackButton>

    <div class="right-side">
        <div class="@(CurrentArtifact?.IsPinned == true ? "pin-icon":"pin-icon-outline")" @onclick="@(CurrentArtifact?.IsPinned == true ? HandleUnpinAsync : HandlePinAsync)"></div>
        <div class="more-option-icon" @onclick="HandleOptionClickAsync"></div>
    </div>
</div>

<div class="text-container">
    <h1 class="title">@(Path.GetFileNameWithoutExtension(CurrentArtifact?.Name))</h1>
    <pre class="CodeMirror text cm-s-default" style="@(IsLoading ? "display: none" : "")" id="codeMirrorTextViewer"></pre>
    <div class="artifact-box @(IsLoading ? "overflow-hidden" : "")">
        @if (IsLoading)
        {
            <OverlayLoading LoadingType="LoadingType.Overlay" />
        }
    </div>
</div>