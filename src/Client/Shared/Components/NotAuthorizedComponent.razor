@inherits AppComponentBase;

<AuthorizeView>
    <div class="main">
        <div><img class="error-triangle" /></div>
        <h2 class="title">@Localizer[nameof(AppStrings.ForbiddenException)]</h2>
        <h4 class="description">You're signed in as @User?.Identity?.Name</h4>
        <div class="buttons">
            <BitButton OnClick="WrapHandled(SignIn)">Sign in as different user</BitButton>
        </div>
    </div>
</AuthorizeView>
